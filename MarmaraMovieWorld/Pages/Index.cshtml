@page
@model IndexModel
@{
    ViewData["Title"] = "Marmara University Movie Platform";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<form asp-page-handler="PokeRequest" class="d-flex justify-content-center align-items-center " method="post">
    <label>Pokemon ID:</label>
    <input asp-for="PokeName" type="search" />
    <button class="btn btn-primary">ARA</button>
</form>

@if (!string.IsNullOrEmpty(Model.photoPath))
{
    <div class="card d-flex justify-content-center align-items-center ">
        <img class="card-img" src="@Model.photoPath" />

    </div>
}

<div class="row row-cols-5">
    @for (int i = 1; i < 151; i++)
    {
        path = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/" + i + ".png";
        <div class="card">
            <img class="card-img" src="@path">
        </div>
    }
</div>
